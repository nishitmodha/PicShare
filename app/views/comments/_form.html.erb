<%= simple_form_for([@photo, @photo.comments.build]) do |f| %>

	<div class="field">
		<div class="control">
			<%= f.input :user_name, input_html: { class: 'form-control'}, wrapper: false, label_html: { class: 'label' } %>
		</div>
	</div>

	<div class="field">
		<div class="control">
			<%= f.input :message, input_html: { class: 'form-control' }, wrapper: false, label_html: { class: 'label' } %>
		</div>
	</div>
	
	<%= f.button :submit, 'Leave a reply', class: 'btn btn-primary' %>
<% end %>